{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parser": "babel-eslint",
    "extends": ["eslint:recommended"],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "rules": {
        "no-undef": 2,
        "no-var": 2,
        "no-const-assign": 2,
        "no-unused-vars": 2,
        "prefer-const": 2,
        "no-irregular-whitespace": 0,
        "react/no-unescaped-entities": 0,
        "react/prop-types": 0
    }
}
